<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_words_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jonathanlieblich.madlibs.WordsTwoActivity">

    <EditText
        android:id="@+id/adjective1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adjective"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:gravity="fill"/>
    <EditText
        android:id="@+id/adjective2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adjective1"
        android:hint="Adjective"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:text=""/>

    <EditText
        android:id="@+id/verb"
        android:hint="Verb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adjective2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:text=""/>

    <EditText
        android:id="@+id/noun"
        android:hint="Noun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verb"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:text=""/>

    <EditText
        android:id="@+id/animal"
        android:hint="Animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/noun"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:text=""/>

    <EditText
        android:id="@+id/game"
        android:hint="Game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/animal"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:text=""/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:layout_below="@id/game"
        android:layout_marginTop="32dp" />

</RelativeLayout>
